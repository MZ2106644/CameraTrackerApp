@model IEnumerable<CameraTrackerApp.Models.Camera>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CameraName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CameraType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HangingLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublicAimed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrivateAimed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CameraName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CameraType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HangingLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicAimed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrivateAimed)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CameraID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CameraID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CameraID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
